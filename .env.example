# Applitrack Production Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_USER=applitrack
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=applitrack

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=https://yourdomain.com

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# The URL where your backend API is accessible
VITE_API_URL=https://api.yourdomain.com

# Clerk authentication (get from clerk.com dashboard)
VITE_CLERK_PUBLISHABLE_KEY=pk_live_xxxxx

# Port to expose frontend (default: 80)
FRONTEND_PORT=80
